%ul.nav.navbar-nav
  - if current_user
    %li.dropdown
      %a.dropdown-toggle{:role => 'button',
                                      :aria => {:expanded => 'false'},
                                      :data => {:toggle => 'dropdown'}}
        = "Logged in as #{current_user.nickname}"
        %span.caret
        %ul.dropdown-menu{:role => 'menu'}
          %li= link_to user_profile_path, 'Dashboard'
          %li= link_to '/logout', 'Logout'
  - else
    %li= link_to '/login', 'Login'
  %li.dropdown
    %a.dropdown-toggle{:role => 'button',
                                    :aria => {:expanded => 'false'},
                                    :data => {:toggle => 'dropdown'}}
      Quotes
      %span.caret
      %ul.dropdown-menu{:role => 'menu'}
        %li= link_to '/quotes', 'View All'
        - if current_user
          %li= link_to user_quotes_path(current_user_uid), "Added by me"
          %li= link_to favorite_quotes_path(current_user_uid), "Favorites"
          %li= link_to kindle_import_path, "Import quotes from Kindle"
          %li= link_to '/quote/new', 'Add a new quote'
